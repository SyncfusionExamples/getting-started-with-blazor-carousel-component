@page "/"

<div style="margin: 0 auto 2em; max-width: 450px; height: 430px;">
    <SfCarousel CssClass="carousel-control">
        @foreach (CarouselDataModel data in CarouselData)
        {
            <CarouselItem>
                <div>
                    <img style="height:250px;width:100%;"
                         src="images/carousel/@(data.ImageName)" alt="@data.Title" />
                    <div style="padding:1rem;">
                        <h5>@data.Title</h5>
                        <p>@data.Content</p>
                    </div>
                </div>
            </CarouselItem>
        }

    </SfCarousel>
